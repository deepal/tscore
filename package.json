{
  "name": "@dpjayasekara/tscore",
  "version": "0.1.0",
  "description": "TypeScript based Application bootstrapper for NodeJS based REST APIs  ",
  "main": "dist/launcher/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "node --require ts-node/register ./lib/index.ts",
    "start": "node ./build/index.js",
    "prod": "npm run build && npm run start",
    "test": "nyc mocha --require ts-node/register test/**/*.ts"
  },
  "nyc": {
    "include": [
      "test/**/*.ts"
    ],
    "extension": [
      ".ts",
      ".tsx"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "author": "Deepal Jayasekara",
  "license": "ISC",
  "dependencies": {
    "@types/app-root-path": "^1.2.4",
    "@types/bunyan": "^1.8.5",
    "@types/express": "^4.16.0",
    "@types/helmet": "0.0.42",
    "@types/mocha": "5.2.5",
    "@types/node": "10.12.18",
    "body-parser": "1.18.3",
    "bunyan": "^1.8.12",
    "codecov": "3.1.0",
    "express": "4.16.4",
    "helmet": "^3.15.0",
    "mocha": "5.2.0",
    "nyc": "13.1.0",
    "should": "13.2.3",
    "ts-node": "7.0.1",
    "typescript": "3.2.2"
  },
  "devDependencies": {
    "source-map-support": "0.5.10",
    "tslint": "5.12.1",
    "tslint-microsoft-contrib": "6.0.0"
  },
  "directories": {
    "doc": "docs",
    "lib": "lib"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dpjayasekara/tscore.git"
  },
  "keywords": [
    "typescript",
    "nodejs",
    "rest"
  ],
  "bugs": {
    "url": "https://github.com/dpjayasekara/tscore/issues"
  },
  "homepage": "https://github.com/dpjayasekara/tscore#readme"
}
