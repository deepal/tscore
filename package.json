{
  "name": "@dpjayasekara/tscore",
  "version": "0.4.3",
  "description": "TypeScript based Application bootstrapper for NodeJS based REST APIs  ",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "lint": "tslint --project tsconfig.json --config tslint.json",
    "build": "tsc",
    "test": "nyc mocha --require ts-node/register test/**/*.ts",
    "docs": "typedoc --out docs/content --mode modules ./lib"
  },
  "pre-commit": [
    "build"
  ],
  "nyc": {
    "include": [
      "test/**/*.ts"
    ],
    "extension": [
      ".ts",
      ".tsx"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "author": "Deepal Jayasekara",
  "license": "ISC",
  "dependencies": {
    "@types/bunyan": "1.8.5",
    "@types/express": "4.16.1",
    "@types/helmet": "0.0.42",
    "@types/mocha": "5.2.5",
    "@types/node": "10.12.18",
    "@types/request": "2.48.1",
    "@types/uuid": "3.4.4",
    "bcrypt": "3.0.3",
    "body-parser": "1.18.3",
    "bunyan": "1.8.12",
    "express": "4.16.4",
    "helmet": "3.15.0",
    "pre-commit": "1.2.2",
    "request": "2.88.0",
    "typescript": "3.2.2",
    "uuid": "3.3.2"
  },
  "devDependencies": {
    "@types/should": "13.0.0",
    "@types/sinon": "7.0.5",
    "mocha": "5.2.0",
    "nyc": "13.1.0",
    "should": "13.2.3",
    "sinon": "7.2.3",
    "source-map-support": "0.5.10",
    "ts-node": "7.0.1",
    "tslint": "5.12.1",
    "tslint-microsoft-contrib": "6.0.0",
    "typedoc": "0.14.2"
  },
  "directories": {
    "doc": "docs",
    "lib": "lib"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dpjayasekara/tscore.git"
  },
  "keywords": [
    "typescript",
    "nodejs",
    "rest"
  ],
  "bugs": {
    "url": "https://github.com/dpjayasekara/tscore/issues"
  },
  "homepage": "https://github.com/dpjayasekara/tscore#readme"
}
