{
    "compilerOptions": {
      "target": "es6",
      "lib": [
        "es2015",
        "es2016",
        "es2017"
      ],
      "module": "commonjs",
      "outDir": "dist",
      "sourceMap": true,
      "strictNullChecks": true,
      "noImplicitAny": true,
      "esModuleInterop": true,
      "declaration": true
    },
    "typeRoots": [ "node_modules/@types" ],
    "include": [
      "./lib/**/*.ts"
    ],
    "exclude": [
      "node_modules",
      "coverage",
      ".nyc_output"
    ]
  }
